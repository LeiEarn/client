<style lang="less">
  .at-card {
    border: 1rpx #c5d9e8 solid;
    margin: 0 auto;
    margin-top: 10rpx;
    border-radius: 12rpx;
    background-color: #fff;
    width: 94%;
    /* elements */
    &__header {
      display: flex;
      align-items: center;
      border-bottom: 1rpx #c5d9e8 solid;
      padding: 18rpx 24rpx;
      position: relative;
      &-title {
        line-height: 1.5;
        display: block;
        color: #2c405a;
        font-size: 32rpx;
      }
    }
    &__content {
      padding: 18rpx 24rpx;
      &-info {
        color: #333;
        font-size: 24rpx;
      }
      &-note {
        margin-top: 18rpx;
        color: #999;
        font-size: 24rpx;
      }
    }
    /* modifiers */
    &--full {
      margin: 0;
      border-radius: 0;
      border-left: none;
      border-right: none;
    }
  }
  .add-choice {
    background-color: white;
  }
  .add-question {
    position: fixed;
    bottom: 10rpx;
    width: 94%;
    left: 3%;
    background-color: white;
    color: greenyellow;
  }
</style>
<template>
  <view class="page">
    <block wx:for-items="{{list}}" wx:for-index="index" wx:for-item="item" wx:key="id">
      <view class="at-card">
        <view class="at-card__header">
          <view class="at-card__header-title">{{item.title}}</view>
        </view>
        <view class="at-card__content">
          <view class="at-card__content-info weui-cell" wx:for="{{item.contents}}" wx:key="value">
            <view class="weui-cell__bd">{{item}}</view>
          </view>
          <button class="add-choice" bindtap="addChoice" data-index="{{index}}" hidden="{{item.type == '简答题'}}">+</button>
          <view class="at-card__content-note">{{item.tips}}</view>
        </view>
      </view>
    </block>
    <picker value="{{index}}" range="{{question}}" bindchange="addQuestion">
      <button class="add-question">+</button>
    </picker>
  </view>
</template>
<script>
  import wepy from 'wepy'
  export default class Questionnaire extends wepy.component {
    data = {
      list: [{
        type: '单选题',
        title: '的说法伽大师傅士大',
        contents: ['cell standard1', 'cell standard2'],
        tips: 'sdaf'
      }],
      question: ['单选题', '多选题', '简答题']
    }
    events = {}
    methods = {
      addChoice(e) {
        console.log(e.currentTarget.dataset.index)
        this.list[e.currentTarget.dataset.index].contents.push('werwewqr')
      },
      addQuestion(e) {
        this.list.push({
          type: this.question[e.detail.value],
          title: '请输入题目',
          contents: [],
          tips: '请输入提示'
        })
      }
    }
    onLoad() {}
  }
</script>
